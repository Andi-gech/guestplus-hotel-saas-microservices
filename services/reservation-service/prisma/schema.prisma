generator client {
  provider = "prisma-client-js"
  }

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id           String    @id @default(uuid())
  userId       String    // Reference to User in another service/db
  roomId       String    // Reference to Room in another service/db
  checkIn      DateTime
  checkOut     DateTime
  status       ReservationStatus @default(PENDING)
  guestName    String?
  guestEmail   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt


}
enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}